<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.dnttr.mindkeep.components.RippleButton?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane fx:id="pane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.dnttr.mindkeep.controllers.MainController"
            prefHeight="800.0" prefWidth="600.0">

    <RippleButton fx:id="button"
                  text="Test"
                  layoutX="50.0"
                  layoutY="50.0"
                  onAction="#handleButtonClick"
                  styleClass="btn-primary"/>

    <Button text="Cancel"
            layoutX="150.0"
            layoutY="50.0"
            styleClass="btn-secondary"/>

    <TextField fx:id="searchField"
               layoutX="50.0"
               layoutY="120.0"
               promptText="Search..."
               styleClass="search-field"/>

    <ListView fx:id="listView"
              layoutX="50.0"
              layoutY="180.0"
              prefHeight="150.0"
              prefWidth="200.0"
              styleClass="list-view">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Item 1"/>
                <String fx:value="Item 2"/>
                <String fx:value="Item 3"/>
            </FXCollections>
        </items>
    </ListView>

    <TextArea fx:id="textArea"
              layoutX="300.0"
              layoutY="50.0"
              prefWidth="250.0"
              prefHeight="120.0"
              text="Sample text..."
              styleClass="text-area"/>

    <Label text="This is a note title"
           layoutX="300.0"
           layoutY="200.0"
           styleClass="note-title"/>

    <Label text="High Priority"
           layoutX="300.0"
           layoutY="240.0"
           styleClass="tag priority-high"/>

</AnchorPane>
